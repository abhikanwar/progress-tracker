generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GoalStatus {
  ACTIVE
  COMPLETED
  ARCHIVED
}

model Goal {
  id               String          @id @default(uuid())
  userId           String
  title            String
  details          String?
  status           GoalStatus      @default(ACTIVE)
  targetDate       DateTime?
  currentProgress  Int             @default(0)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  progressEvents   ProgressEvent[]
  milestones       GoalMilestone[]
  goalTags         GoalTag[]
  coachActionCompletions CoachActionCompletion[]
  user             User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([targetDate])
  @@index([userId])
  @@unique([id, userId])
}

model Tag {
  id        String    @id @default(uuid())
  userId    String
  name      String
  createdAt DateTime  @default(now())
  goalTags  GoalTag[]
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId])
}

model GoalTag {
  id        String   @id @default(uuid())
  goalId    String
  tagId     String
  createdAt DateTime @default(now())

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([goalId, tagId])
  @@index([goalId])
  @@index([tagId])
}

model GoalMilestone {
  id        String   @id @default(uuid())
  goalId    String
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
  @@index([completed])
}

model ProgressEvent {
  id        String   @id @default(uuid())
  goalId    String
  value     Int
  note      String?
  createdAt DateTime @default(now())

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
  @@index([createdAt])
}

model User {
  id           String  @id @default(uuid())
  email        String  @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  goals        Goal[]
  tags         Tag[]
  coachInsight CoachInsight?
  coachActionCompletions CoachActionCompletion[]
  coachConversations CoachConversation[]
  coachActionProposals CoachActionProposal[]
}

model GoalTemplate {
  id                String                  @id @default(uuid())
  slug              String                  @unique
  name              String
  description       String?
  category          String
  defaultTargetDays Int?
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt
  milestones        GoalTemplateMilestone[]
  tags              GoalTemplateTag[]

  @@index([category])
}

model GoalTemplateMilestone {
  id         String       @id @default(uuid())
  templateId String
  title      String
  sortOrder  Int
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  template   GoalTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@index([templateId])
}

model GoalTemplateTag {
  id         String       @id @default(uuid())
  templateId String
  name       String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  template   GoalTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@index([templateId])
}

model CoachInsight {
  id        String   @id @default(uuid())
  userId    String   @unique
  source    String
  summary   Json
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  actionCompletions CoachActionCompletion[]

  @@index([userId, expiresAt])
}

model CoachActionCompletion {
  id          String      @id @default(uuid())
  userId      String
  goalId      String
  insightId   String
  completedAt DateTime    @default(now())
  insight     CoachInsight @relation(fields: [insightId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  goal        Goal        @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([userId, completedAt])
  @@index([goalId, completedAt])
  @@index([insightId])
}

model CoachConversation {
  id        String       @id @default(uuid())
  userId    String
  title     String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  CoachMessage[]
  actionProposals CoachActionProposal[]

  @@index([userId, updatedAt])
}

model CoachMessage {
  id             String            @id @default(uuid())
  conversationId String
  role           String
  content        String
  createdAt      DateTime          @default(now())
  conversation   CoachConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  actionProposals CoachActionProposal[]

  @@index([conversationId, createdAt])
}

model CoachActionProposal {
  id             String            @id @default(uuid())
  userId         String
  conversationId String
  messageId      String
  type           String
  label          String
  payload        Json
  riskLevel      String
  status         String            @default("pending")
  expiresAt      DateTime
  executedAt     DateTime?
  createdAt      DateTime          @default(now())
  user           User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  conversation   CoachConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  message        CoachMessage      @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@index([userId, status, expiresAt])
  @@index([conversationId, createdAt])
}
