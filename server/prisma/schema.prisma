generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GoalStatus {
  ACTIVE
  COMPLETED
  ARCHIVED
}

model Goal {
  id               String          @id @default(uuid())
  userId           String
  title            String
  details          String?
  status           GoalStatus      @default(ACTIVE)
  targetDate       DateTime?
  currentProgress  Int             @default(0)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  progressEvents   ProgressEvent[]
  milestones       GoalMilestone[]
  goalTags         GoalTag[]
  user             User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([targetDate])
  @@index([userId])
  @@unique([id, userId])
}

model Tag {
  id        String    @id @default(uuid())
  userId    String
  name      String
  createdAt DateTime  @default(now())
  goalTags  GoalTag[]
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name])
  @@index([userId])
}

model GoalTag {
  id        String   @id @default(uuid())
  goalId    String
  tagId     String
  createdAt DateTime @default(now())

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([goalId, tagId])
  @@index([goalId])
  @@index([tagId])
}

model GoalMilestone {
  id        String   @id @default(uuid())
  goalId    String
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
  @@index([completed])
}

model ProgressEvent {
  id        String   @id @default(uuid())
  goalId    String
  value     Int
  note      String?
  createdAt DateTime @default(now())

  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId])
  @@index([createdAt])
}

model User {
  id           String  @id @default(uuid())
  email        String  @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  goals        Goal[]
  tags         Tag[]
}
